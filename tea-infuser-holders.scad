short_infuser_wire_x = 0;
short_infuser_wire_y = 0;
short_infuser_wire_size_a_x = 0;
short_infuser_wire_size_b_x = 0;

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
// settings

render_mode = "preview";


////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
// calculations

$fn = $preview ? 16 : 32;

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
// models

if( render_mode == "preview" )
{
    ShortInfuserPreview( );

    translate( [ 100, 0, 0 ] )
        TallInfuserPreview( );
}
else
{
    assert( false, "Unknown render mode" );
}

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

module ShortInfuserPreview( )
{
    % cylinder( r1 = short_infuser_top_r, r2 = short_infuser_bottom_r, h = short_infuser_z );

}

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

module TallInfuserPreview( )
{
    % cylinder( r = tall_infuser_r, h = tall_infuser_z );
}

