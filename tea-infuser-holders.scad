// measurements

tall_infuser_r = 59.4 / 2;
tall_infuser_z = 0;
tall_infuser_top_lip_r = 0;

short_infuser_top_r = 58.6 / 2;
short_infuser_bottom_r = 51.5 / 2;
short_infuser_z = 0;
